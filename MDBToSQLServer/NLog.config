<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="logs/internal-nlog.log">

	<targets>
		<!-- 控制台输出 -->
		<target name="console" xsi:type="ColoredConsole"
				layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=toString}" />

		<!-- 文件输出 -->
		<target name="logfile" xsi:type="File"
				fileName="logs/MDBImport_${shortdate}.log"
				layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=toString}"
				archiveFileName="logs/archive/MDBImport_{#}.log"
				archiveEvery="Day"
				archiveNumbering="Date"
				archiveDateFormat="yyyyMMdd"
				maxArchiveFiles="30" />

		<!-- 错误文件单独输出 -->
		<target name="errorfile" xsi:type="File"
				fileName="logs/MDBImport_Error_${shortdate}.log"
				layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=toString}"
				archiveFileName="logs/archive/MDBImport_Error_{#}.log"
				archiveEvery="Day"
				archiveNumbering="Date"
				archiveDateFormat="yyyyMMdd"
				maxArchiveFiles="30" />
	</targets>

	<rules>
		<!-- 控制台输出所有级别 -->
		<logger name="*" minlevel="Info" writeTo="console" />

		<!-- 文件输出所有级别 -->
		<logger name="*" minlevel="Debug" writeTo="logfile" />

		<!-- 错误单独输出 -->
		<logger name="*" minlevel="Error" writeTo="errorfile" />
	</rules>
</nlog>